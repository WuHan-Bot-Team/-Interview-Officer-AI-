/* 刷题推荐页面样式 */

.recommend-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 0 0 40rpx;
}

/* 参数选择区域 */
.param-section {
  padding: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.param-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.param-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.param-item:last-child {
  border-bottom: none;
}

.param-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.param-value {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  min-width: 200rpx;
  justify-content: center;
}

.param-input {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  min-width: 200rpx;
  transition: all 0.3s ease;
}

.param-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.generate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.generate-btn[disabled] {
  opacity: 0.7;
}

.generate-btn::after {
  border: none;
}

/* 结果展示区域 */
.result-section {
  padding: 0 32rpx;
}

.question-list {
  margin-bottom: 24rpx;
}

.question-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-num {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.question-difficulty {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.question-difficulty.easy {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.question-difficulty.medium {
  background: rgba(249, 115, 22, 0.1);
  color: #f97316;
}

.question-difficulty.hard {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.question-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.question-tips {
  background: rgba(102, 126, 234, 0.05);
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #667eea;
}

.tips-label {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.question-keywords {
  margin-bottom: 24rpx;
}

.keywords-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.keyword-tag {
  font-size: 22rpx;
  background: rgba(139, 92, 246, 0.1);
  color: #8b5cf6;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.question-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.practice-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.practice-btn:active {
  transform: scale(0.95);
}

.save-btn {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.save-btn:active {
  background: rgba(102, 126, 234, 0.2);
}

.suggestions-card {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 32rpx;
}

.suggestions-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8b4513;
  margin-bottom: 20rpx;
}

.suggestions-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #5d4e75;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 32rpx;
  text-align: center;
}
