.search-input {
  padding: 16rpx 0;
}

.search-page {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  padding: 0 30rpx;
  background: linear-gradient(135deg, #f9f9f9, #f5f5f5);
}

.search-page .t-class__input-container {
  border-radius: 999rpx !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05) !important;
}

.search-page .t-search__input {
  font-size: 28rpx !important;
  color: #333 !important;
}

.search-page .search-wrap {
  margin-top: 30rpx;
}

.search-page .history-wrap {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.search-page .search-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.search-page .search-title {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333;
  line-height: 42rpx;
  position: relative;
  padding-left: 16rpx;
}

.search-page .search-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(to bottom, #667eea, #764ba2);
  border-radius: 3rpx;
}

.search-page .search-clear {
  font-size: 30rpx;
  color: #999;
  font-weight: bold;
  padding: 10rpx;
}

.search-page .search-content {
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 24rpx;
}

.search-page .search-item {
  color: #333333;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: 400;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.search-page .hover-history-item {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1) inset;
}

.add-notes__confirm {
  color: #fa4126 !important;
}

.popular-wrap {
  margin-top: 32rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.search-page .search-item .popular-item {

  color: #1e40af;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 0 !important;
  overflow: visible;
}

.popular-tag-content {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.popular-rank {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 36rpx;
  height: 36rpx;
  background: #cbd5e1;
  color: #475569;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.top-rank {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  color: white;
}

.popular-text {
  flex: 1;
  color: #1e40af;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.popular-trend {
  margin-left: 12rpx;
  display: flex;
  align-items: center;
}

.trend-icon {
  font-size: 24rpx;
}

.trend-icon.hot {
  color: #ef4444;
}

.trend-icon.down {
  color: #10b981;
}

.trend-text {
  font-size: 20rpx;
  background: #f97316;
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.empty-tips {
  width: 100%;
  text-align: center;
  color: #94a3b8;
  font-size: 26rpx;
  padding: 40rpx 0;
}

/* 添加动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.history-wrap, .popular-wrap {
  animation: fadeIn 0.5s ease-out;
}

/* 热门搜索项的序号样式 */


.search-page .search-item .history-item {
  background: linear-gradient(135deg, #f5f5f5, #e5e5e5);
  color: #4b5563;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
