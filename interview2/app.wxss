/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
  background-color: #f5f5f5;
}

/* TDesign 图标字体配置 */
.t-icon {
  font-family: 't-icon', 'iconfont', system-ui, -apple-system, sans-serif !important;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 如果字体加载失败，使用备用方案 */
.t-icon::before {
  display: inline-block;
  text-rendering: auto;
}

/* 底部导航栏安全区域适配 */
.tab-bar {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 通用容器样式 */
.container {
  min-height: 100vh;
  padding-bottom: 140rpx; /* 为底部导航栏留出空间 */
}

/* 修复可能的字体加载问题 */
@media screen and (-webkit-min-device-pixel-ratio: 0) and (min-resolution: 0.001dpcm) {
  .t-icon {
    font-family: 't-icon', 't', Arial, sans-serif;
  }
}

/* 网络字体加载失败时的备用方案 */
.t-icon {
  font-family: 't-icon', 't', 'iconfont', system-ui, -apple-system, sans-serif !important;
}

/* 常用图标的Unicode备用显示（当字体加载失败时） */
.t-icon--chevron-right::before {
  content: "›" !important;
}

.t-icon--edit::before {
  content: "✎" !important;
}

.t-icon--service::before {
  content: "☎" !important;
}

.t-icon--setting::before {
  content: "⚙" !important;
}
